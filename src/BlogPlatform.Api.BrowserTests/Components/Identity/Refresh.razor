<h2>Refresh token</h2>
<form method="post" action="@UrlWithQueryStrings">
    <button class="btn btn-primary" type="submit">Refresh</button>
</form>

@code {
    [Parameter]
    public string? Url { get; set; }

    [Parameter]
    public string? QueryStrings { get; set; }

    public string UrlWithQueryStrings => Url + QueryStrings;
}
